<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个Button" />

    <Button
        android:id="@+id/button_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_21"
        android:text="第二个Button" />

    <Button
        android:id="@+id/button_23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_21"
        android:text="第三个Button" />

    <Button
        android:id="@+id/button_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_23"
        android:layout_below="@id/button_21"
        android:text="第四个Button" />

    <Button
        android:id="@+id/button_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_23"
        android:text="返回" />

</RelativeLayout>